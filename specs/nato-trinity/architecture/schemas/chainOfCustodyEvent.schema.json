{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/nato-trinity/schemas/chainOfCustodyEvent.schema.json",
  "title": "ChainOfCustodyEvent",
  "type": "object",
  "required": [
    "id",
    "type",
    "version",
    "createdAt",
    "createdBy",
    "eventId",
    "evidenceId",
    "action",
    "actor",
    "timestamp",
    "prevHash",
    "eventHash",
    "hashAlg"
  ],
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "chainOfCustodyEvent" },
    "version": { "type": "integer", "minimum": 1 },
    "createdAt": { "type": "string", "format": "date-time" },
    "createdBy": { "type": "string" },

    "eventId": { "type": "string" },
    "evidenceId": { "type": "string" },
    "action": {
      "type": "string",
      "enum": ["collected", "transferred", "accessed", "sealed", "verified"]
    },
    "actor": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },

    "prevHash": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
    "eventHash": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
    "hashAlg": { "type": "string", "enum": ["sha256"], "default": "sha256" },

    "location": { "type": "string" },
    "details": { "type": "object" }
  },
  "additionalProperties": true
}
